@model Book
<h1>Add New Book</h1>
<form asp-action="AddBook" method="post">
    <label>Title:</label>
    <input asp-for="Title" />
    <br />
    <label>Author:</label>
    <input asp-for="Author" />
    <br />
    <label>Genre:</label>
    <input asp-for="Genre" />
    <br />
    <button type="submit">Save</button>
</form>
